{
  "name": "create-next-example-app",
  "description": "A Next.js starter app.",
  "repository": {
    "type": "git",
    "url": "https://github.com/zeit/now-examples/tree/master/nextjs"
  },
  "license": "MIT",
  "scripts": {
    "start": "now",
    "eslint": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 0",
    "graph": "graphpack",
    "buildgraph": "graphpack build",
    "lint": "npm run lint-scripts",
    "lint-scripts": "eslint './{src/**,test/**,config/**,.}/*.js'",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-ssr": "^3.1.3",
    "@material-ui/core": "^4.8.1",
    "@material-ui/icons": "^4.5.1",
    "apollo-boost": "^0.4.7",
    "apollo-server-micro": "^2.9.14",
    "axios": "^0.21.1",
    "babel-plugin-styled-components": "^1.10.6",
    "cheerio": "^1.0.0-rc.3",
    "clsx": "^1.0.4",
    "graphql": "^14.5.8",
    "graphql-lodash": "^1.3.4",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.0.2",
    "next-with-apollo": "^4.3.0",
    "notistack": "^0.9.7",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.8.6",
    "react-intl": "^3.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-eslint": "^10.0.3",
    "commitizen": "^3.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "23.1.1",
    "eslint-plugin-mocha": "6.2.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react-app": "^6.1.0",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-wyze": "3.4.0",
    "graphpack": "^1.0.9",
    "htmlparser2": "^3.10.1",
    "husky": "^2.7.0",
    "isomorphic-unfetch": "^3.0.0",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1",
    "stylelint": "12.0.0",
    "stylelint-config-standard": "19.0.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.json": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "server.js",
      "build/*.js",
      ".next"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  }
}
